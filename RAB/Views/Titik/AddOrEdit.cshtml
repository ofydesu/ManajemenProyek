@model RAB.Models.Utama.Titik
@using RAB.Asset.Enum
@{
    ViewData["Title"] = "Form Grid";
    Layout = null;
}

<h4 class="text-center">Untuk @ViewBag.PolaNama</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.TtkId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PolaId" id="polaId" value="@ViewBag.PolaId" />
            <input type="hidden" asp-for="TtkId" />
            <input type="hidden" asp-for="PosAbs" value="0" />
            <input type="hidden" asp-for="PosRel" value="0" />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Sumbu" class="control-label"></label>
                        <select asp-for="Sumbu" id="pilihSumbu" class="form-control" asp-items="Html.GetEnumSelectList<ESumbu>()"
                                onchange="return pilihSumbuDiIsianGrid()">
                        </select>
                        <span asp-validation-for="Sumbu" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="SumbuId" class="control-label"></label>
                        <input asp-for="SumbuId" id="sumbuId" value="@ViewBag.SumbuId" class="form-control" />
                        <span asp-validation-for="SumbuId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Nama" class="control-label"></label>
                        <input asp-for="Nama" class="form-control" />
                        <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Jarak" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="Jarak" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text">@ViewBag.Satuan</span>
                            </div>
                        </div>
                        <span asp-validation-for="Jarak" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="raw">
                <div>
                    <div class="form-group">
                        <input type="submit" value="Kirim" class="btn btn-primary col-md-12" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


